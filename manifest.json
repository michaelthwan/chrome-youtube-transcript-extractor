{
  "manifest_version": 3,
  "name": "YouTube Transcript Extractor",
  "version": "1.0.0",
  "description": "Extract YouTube video transcripts with timestamps via right-click context menu",
  
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "action": {
    "default_title": "YouTube Transcript Extractor"
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}